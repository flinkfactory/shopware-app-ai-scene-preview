{# AI Scene Preview Modal #}
{% set isLoggedIn = context.customer is not null %}
<div class="modal fade"
     id="aiScenePreviewModal"
     tabindex="-1"
     role="dialog"
     aria-labelledby="aiScenePreviewModalLabel"
     aria-hidden="true"
     data-ai-scene-preview-modal
     data-customer-logged-in="{{ isLoggedIn ? 'true' : 'false' }}"
     data-context-token="{{ context.token|e('html_attr') }}"
     data-login-error-default="{{ 'ai-scene-preview.login.error'|trans|e('html_attr') }}"
     data-login-success-message="{{ 'ai-scene-preview.login.success'|trans|e('html_attr') }}"
     data-login-endpoint="/store-api/account/login"
     data-loading-messages='{{ [
         "ai-scene-preview.loading.analyzing"|trans,
         "ai-scene-preview.loading.surveying"|trans,
         "ai-scene-preview.loading.describing"|trans,
         "ai-scene-preview.loading.prompting"|trans,
         "ai-scene-preview.loading.generating"|trans,
         "ai-scene-preview.loading.assembling"|trans
     ]|json_encode|e('html_attr') }}'
     data-error-invalid-image="{{ 'ai-scene-preview.error.invalidImage'|trans|e('html_attr') }}"
     data-error-no-image="{{ 'ai-scene-preview.error.noImage'|trans|e('html_attr') }}"
     data-error-session-limit="{{ 'ai-scene-preview.error.sessionLimit'|trans|e('html_attr') }}"
     data-error-load-failed="{{ 'ai-scene-preview.error.loadFailed'|trans|e('html_attr') }}"
     data-error-generation-failed="{{ 'ai-scene-preview.error.generationFailed'|trans|e('html_attr') }}"
     data-error-generation-exception="{{ 'ai-scene-preview.error.generationException'|trans|e('html_attr') }}">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="aiScenePreviewModalLabel">
                    {{ "ai-scene-preview.modal.title"|trans }}
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            
            <div class="modal-body">

<div class="ai-scene-preview-login mb-4{{ isLoggedIn ? ' d-none' : '' }}" data-login-container>
    <div class="card shadow-sm">
        <div class="card-body">
            <h5 class="card-title">{{ "ai-scene-preview.login.title"|trans }}</h5>
            <p class="card-text text-muted">{{ "ai-scene-preview.login.description"|trans }}</p>
            <form class="row g-3" data-login-form novalidate>
                <div class="col-12">
                    <label for="ai-scene-login-email" class="form-label">{{ "ai-scene-preview.login.emailLabel"|trans }}</label>
                    <input type="email"
                           class="form-control"
                           id="ai-scene-login-email"
                           name="username"
                           autocomplete="email"
                           required>
                </div>
                <div class="col-12">
                    <label for="ai-scene-login-password" class="form-label">{{ "ai-scene-preview.login.passwordLabel"|trans }}</label>
                    <input type="password"
                           class="form-control"
                           id="ai-scene-login-password"
                           name="password"
                           autocomplete="current-password"
                           required>
                </div>
                <div class="col-12 d-flex align-items-center">
                    <button type="submit" class="btn btn-primary me-3" data-login-submit>
                        <span data-login-submit-text>{{ "ai-scene-preview.login.submit"|trans }}</span>
                        <span class="spinner-border spinner-border-sm ms-2 d-none" role="status" aria-hidden="true" data-login-spinner></span>
                    </button>
                    <a href="{{ path('frontend.account.recover.page') }}" class="small">{{ "ai-scene-preview.login.forgotPassword"|trans }}</a>
                </div>
                <div class="col-12">
                    <div class="alert alert-danger d-none" role="alert" data-login-error></div>
                    <div class="alert alert-success d-none" role="alert" data-login-success></div>
                </div>
            </form>
        </div>
    </div>
</div>
                <div class="ai-scene-preview-content-wrapper{{ isLoggedIn ? '' : ' d-none' }}" data-content-container>
                {# Generation Counter #}
                <div class="ai-scene-preview-counter mb-3 d-none" data-generations-counter>
                    <div class="alert alert-info d-flex align-items-start text-white p-2"
                         role="alert"
                         data-generations-alert
                         data-template-low="{{ 'ai-scene-preview.modal.generationsInfoLow'|trans|e('html_attr') }}"
                         data-template-none="{{ 'ai-scene-preview.modal.generationsInfoNone'|trans|e('html_attr') }}">
                        {% sw_icon 'info' style { size: 'sm'} %}
                        <div class="ms-2">
                            <div class="fw-bold">
                                <strong data-generations-remaining class="me-1">{{ config('FlinkAiScenePreviewApp.config.maxGenerationsPerSession') }}</strong>
                                {{ "ai-scene-preview.modal.generationsRemaining"|trans }}
                            </div>
                            <small class="d-block" data-generations-message></small>
                        </div>
                    </div>
                </div>

                {# Main Content Area #}
                <div class="ai-scene-preview-content">
                    <div class="row">
                        {# Product Column #}
                        <div class="col-md-3 col-lg-2">
                            <h6 class="mb-3">{{ "ai-scene-preview.modal.product"|trans }}</h6>
                            <div class="ai-scene-product-card" data-product-display draggable="true" style="cursor: move;">
                                <img src="" alt="{{ "ai-scene-preview.modal.productImageAlt"|trans }}" class="img-fluid" data-product-image>
                                <p class="mt-2 text-center small mb-0" data-product-name></p>
                            </div>
                        </div>

                        {# Scene Column #}
                        <div class="col-md-9 col-lg-10">
                            <h6 class="mb-3">{{ "ai-scene-preview.modal.scene"|trans }}</h6>
                            
                            {# Upload Area (Initial State) #}
                            <div class="ai-scene-upload-area" data-scene-upload>
                                <div class="upload-dropzone">
                                    <input type="file"
                                           id="sceneImageInput"
                                           accept="image/*"
                                           style="display: none;"
                                           data-scene-input>
                                    
                                    <label for="sceneImageInput" class="upload-label">
                                        <div class="text-center p-5">
                                            {% sw_icon 'cloud-upload' style { size:'xs' } %}
                                            <h5>{{ "ai-scene-preview.modal.uploadScene"|trans }}</h5>
                                            <p class="text-muted">
                                                {{ "ai-scene-preview.modal.uploadInstruction"|trans }}
                                            </p>
                                            <span class="btn btn-primary mt-3">
                                                {{ "ai-scene-preview.modal.selectImage"|trans }}
                                            </span>
                                        </div>
                                    </label>
                                </div>
                            </div>

                            {# Preview Area (After Upload) #}
                            <div class="ai-scene-preview-area d-none" data-scene-preview>
                                <div class="preview-container"
                                     data-dropzone="true"
                                     data-scene-dropzone>
                                    <img src="" alt="{{ "ai-scene-preview.modal.sceneImageAlt"|trans }}" class="img-fluid" data-scene-image>
                                    
                                    {# Placement Orb #}
                                    <div class="placement-orb d-none" data-placement-orb>
                                        <span class="orb-indicator"></span>
                                    </div>
                                    
                                    {# Loading Overlay #}
                                    <div class="loading-overlay d-none" data-loading-overlay>
                                        <div class="spinner-border text-light" role="status">
                                            <span class="visually-hidden">{{ "ai-scene-preview.modal.generating"|trans }}</span>
                                        </div>
                                        <p class="text-white mt-3" data-loading-message>
                                            {{ "ai-scene-preview.modal.generating"|trans }}
                                        </p>
                                    </div>
                                </div>

                                {# Instructions #}
                                <div class="ai-scene-instructions mt-3">
                                    <p class="text-muted small">
                                        {% sw_icon 'info' style { size:'xs' } %}
                                        {{ "ai-scene-preview.modal.instructions"|trans }}
                                    </p>
                                </div>
                                
                                {# Action Buttons #}
                                <div class="mt-3 d-flex justify-content-between">
                                    <button type="button"
                                            class="btn btn-outline-secondary"
                                            data-change-scene>
                                        {{ "ai-scene-preview.modal.changeScene"|trans }}
                                    </button>
                                    
                                    <button type="button"
                                            class="btn btn-outline-info d-none"
                                            data-debug-button>
                                        {{ "ai-scene-preview.modal.showDebug"|trans }}
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                {# Error Message Area #}
                <div class="ai-scene-error-message d-none mt-3" data-error-message>
                    <div class="alert alert-danger d-flex align-items-center text-white" role="alert">
                        {% sw_icon 'warning' style { size:'sm' } %}
                        <span data-error-text></span>
                    </div>
                </div>

                {# Touch Ghost for Mobile #}
                <div class="ai-scene-touch-ghost d-none" data-touch-ghost>
                    <img src="" alt="{{ "ai-scene-preview.modal.touchGhostAlt"|trans }}" class="touch-ghost-image">
                </div>
            </div>
        </div>

        <div class="modal-footer" data-login-dependent-footer>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    {{ "ai-scene-preview.modal.close"|trans }}
                </button>
            </div>
        </div>
    </div>
</div>

{# Debug Modal #}
<div class="modal fade"
     id="aiSceneDebugModal"
     tabindex="-1"
     role="dialog"
     aria-labelledby="aiSceneDebugModalLabel"
     aria-hidden="true"
     data-ai-scene-debug-modal>
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="aiSceneDebugModalLabel">
                    {{ "ai-scene-preview.debug.title"|trans }}
                </h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            
            <div class="modal-body">
                <h6>{{ "ai-scene-preview.debug.markedImage"|trans }}</h6>
                <img src="" alt="{{ "ai-scene-preview.debug.markedImageAlt"|trans }}" class="img-fluid mb-3" data-debug-image>
                
                <h6>{{ "ai-scene-preview.debug.prompt"|trans }}</h6>
                <pre class="bg-light p-3" data-debug-prompt></pre>
            </div>
            
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    {{ "ai-scene-preview.modal.close"|trans }}
                </button>
            </div>
        </div>
    </div>
</div>