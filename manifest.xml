<?xml version="1.0" encoding="UTF-8"?>
<manifest xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/shopware/shopware/trunk/src/Core/Framework/App/Manifest/Schema/manifest-3.0.xsd">
    <meta>
        <name>FlinkAiScenePreviewApp</name>
        <label>FlinkAiScenePreviewApp</label>
        <label lang="de-DE">FlinkAiScenePreviewApp</label>
        <description/>
        <description lang="de-DE"/>
        <author>flinkfactory</author>
        <copyright>(c) by flinkfactory</copyright>
        <version>1.0.0</version>
        <icon>Resources/config/plugin.png</icon>
        <license>MIT</license>
    </meta>
    <setup>
        <registrationUrl>http://flink_app_server/app/lifecycle/register</registrationUrl>
        <secret>TestSecret</secret>
    </setup>
    <webhooks>
        <webhook name="appActivated" url="http://flink_app_server/app/lifecycle/activate" event="app.activated"/>
        <webhook name="appDeactivated" url="http://flink_app_server/app/lifecycle/deactivate" event="app.deactivated"/>
        <webhook name="appDeleted" url="http://flink_app_server/app/lifecycle/delete" event="app.deleted"/>
    </webhooks>
    <custom-fields>
        <custom-field-set>
            <name>flink_ai_scene_preview</name>
            <label>AI Scene Preview</label>
            <label lang="de-DE">KI Szenen-Vorschau</label>
            <related-entities>
                <product/>
            </related-entities>
            <fields>
                <bool name="flink_ai_scene_preview_enabled">
                    <label>Enable AI product scene generation</label>
                    <label lang="de-DE">KI-Produktszenen-Generierung aktivieren</label>
                    <help-text>Allow customers to preview this product in their own room using AI</help-text>
                    <help-text lang="de-DE">Ermöglicht Kunden, dieses Produkt mit KI in ihrem eigenen Raum zu visualisieren</help-text>
                    <position>1</position>
                </bool>
                <text name="flink_ai_scene_preview_image">
                    <label>Front view of product</label>
                    <label lang="de-DE">Frontansicht des Produkts</label>
                    <help-text>Upload a clean front view of the product (ideally with white background) for best AI results</help-text>
                    <help-text lang="de-DE">Laden Sie eine saubere Frontansicht des Produkts (idealerweise mit weißem Hintergrund) für beste KI-Ergebnisse hoch</help-text>
                    <position>2</position>
                </text>
            </fields>
        </custom-field-set>
    </custom-fields>
</manifest>